<%- include("header") -%>

    <div class="box" id="heading">
      <h1 ><%=listTitle%> </h1>
    </div>

    <div class="box">
      <% newListItems.forEach((newListItem)=>{ %>
        <form action="/delete" method="post">

          <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=newListItem._id%>">
            <p><%= newListItem.name %> </p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
      <% }) %>

      <!-- <a href="/about">Go to About Page</a> -->
      <form  action="/" method="POST">
        <input type="text" name="newItem"  placeholder="Add What You Buy" autocomplete="off">
        <button type="submit" name="list" value = <%= listTitle %>>+</button>
      </form>
    </div>
<%- include("footer") -%>
